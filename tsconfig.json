{
  "compilerOptions": {
      "allowJs": true,
      "checkJs": false,
      "target": "es2016",
      "module": "Node16",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "moduleResolution": "Node16",
      "outDir": "build",
      "types": ["jest"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx", "test/**/*.ts"]
}